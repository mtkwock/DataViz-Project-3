extends layout

block content
    h1 Project 3 - Massive Pew Comparisons
    h2 Mitchell Kwock and Brendan Caporaletti
    div#form
        h3 Continents
        p
            span United States
            input#usCheck(type="checkbox", value="United States" checked)
            span Canada 
            input#caCheck(type="checkbox", value="Canada" checked)
            span Mexico
            input#mexCheck(type="checkbox", value="Mexico" checked)
            span Chile 
            input#chileCheck(type="checkbox", value="Chile" checked)
            span Brazil
            input#brCheck(type="checkbox", value="Brazil" checked)
            span Argentina
            input#argCheck(type="checkbox", value="Argentina" checked)
            span Bolivia
            input#bolCheck(type="checkbox", value="Bolivia" checked)
            span Venezuela
            input#venCheck(type="checkbox", value="Venezuela" checked)
            span El Salvador
            input#salCheck(type="checkbox", value="El Salvador" checked)
        h3 Question 1
            select#q1
        h3 Question 2
            select#q2
        div
            svg#viz(height=600, width=800)
